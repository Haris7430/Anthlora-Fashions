<script>

	document.addEventListener('DOMContentLoaded', function() {
		// Handle sorting and category form submission
		const sortForm = document.getElementById('sortForm');
		const categoryForm = document.getElementById('categoryForm');
	
		function updatePageURL(sort, category, page) {
			// Construct URL with all parameters
			const params = new URLSearchParams();
			if (page) params.append('page', page);
			if (sort && sort !== 'default') params.append('sort', sort);
			if (category) params.append('category', category);
	
			window.location.href = `/shop-page?${params.toString()}`;
		}
	
		if (sortForm) {
			sortForm.addEventListener('change', function(e) {
				const currentPage = new URLSearchParams(window.location.search).get('page') || 1;
				const currentCategory = new URLSearchParams(window.location.search).get('category') || '';
				const sortValue = e.target.value;
				
				updatePageURL(sortValue, currentCategory, currentPage);
			});
		}
	
		// Update URL for pagination while preserving sort and category
		const paginationLinks = document.querySelectorAll('.pagination a');
		paginationLinks.forEach(link => {
			link.addEventListener('click', function(e) {
				if (!this.classList.contains('dot-dot')) {
					e.preventDefault();
					const currentSort = new URLSearchParams(window.location.search).get('sort') || 'default';
					const currentCategory = new URLSearchParams(window.location.search).get('category') || '';
					const page = this.getAttribute('href').split('page=')[1].split('&')[0];
					
					updatePageURL(currentSort, currentCategory, page);
				}
			});
		});
	});
	</script>

