<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
       body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    overflow-y: auto; /* Allow vertical scrolling if needed */
}

.container {
    background: #fff;
    padding: 20px 30px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 400px;
    position: relative; /* Add this */
    z-index: 1; /* Add this */
}

h2 {
    text-align: center;
    color: #333;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 20px; /* Increased margin */
    position: relative;
}

label {
    display: block;
    margin-bottom: 8px; /* Reduced margin */
    color: #555;
    font-weight: 600; /* Make label slightly bolder */
}

input[type="password"],
input[type="text"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
    box-sizing: border-box;
    margin-top: 0; /* Ensure input is directly under label */
}

.eye-icon {
    position: absolute;
    right: 10px;
    top: 35px; /* Adjust to be in line with input */
    font-size: 18px;
    color: #555;
    cursor: pointer;
    transition: color 0.2s ease;
}

.eye-icon:hover {
    color: #007bff;
}

.btn {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
}

.btn:hover {
    background-color: #0056b3;
}

.message {
    margin-top: 15px;
    font-size: 14px;
    text-align: center;
}

.error {
    color: #d9534f;
}

.success {
    color: #5cb85c;
}

    </style>
</head>
<body>
    <div class="container">
        <h2>Reset Password</h2>
        <% if (message) { %>
            <div class="message error"><%= message %></div>
        <% } %>
        <form id="resetPasswordForm" method="POST" action="/reset-password">
            <div class="form-group">
                <label for="newPass1">New Password</label>
                <input type="password" id="newPass1" name="newPass1" placeholder="Enter new password" required>
                <span class="eye-icon" id="toggleNewPass1">üëÅÔ∏è</span>
            </div>
            <div class="form-group">
                <label for="newPass2">Confirm Password</label>
                <input type="password" id="newPass2" name="newPass2" placeholder="Confirm new password" required>
                <span class="eye-icon" id="toggleNewPass2">üëÅÔ∏è</span>
            </div>
            <button type="submit" class="btn">Reset Password</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const resetPasswordForm = document.getElementById('resetPasswordForm');
        const newPass1 = document.getElementById('newPass1');
        const newPass2 = document.getElementById('newPass2');
        const toggleNewPass1 = document.getElementById('toggleNewPass1');
        const toggleNewPass2 = document.getElementById('toggleNewPass2');

        // Password visibility toggle
        toggleNewPass1.addEventListener('click', function() {
            newPass1.type = newPass1.type === 'password' ? 'text' : 'password';
        });

        toggleNewPass2.addEventListener('click', function() {
            newPass2.type = newPass2.type === 'password' ? 'text' : 'password';
        });

        // Form submission with client-side validation
        resetPasswordForm.addEventListener('submit', function(e) {
            e.preventDefault();

            // Validate passwords
            if (newPass1.value.length < 8) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Password',
                    text: 'Password must be at least 8 characters long.',
                    willOpen: () => {
                        document.body.style.overflow = 'hidden'; // Lock scrolling
                    },
                    didClose: () => {
                        document.body.style.overflow = ''; // Restore scrolling
                    }
                });
                return;
            }

            if (newPass1.value !== newPass2.value) {
                Swal.fire({
                    icon: 'error',
                    title: 'Password Mismatch',
                    text: 'New password and confirm password do not match.',
                    willOpen: () => {
                        document.body.style.overflow = 'hidden'; // Lock scrolling
                    },
                    didClose: () => {
                        document.body.style.overflow = ''; // Restore scrolling
                    }
                });
                return;
            }

            const formData = new FormData(resetPasswordForm);

            // Submit data via AJAX
            $.ajax({
                type: 'POST',
                url: '/reset-password',
                data: {
                    newPass1: newPass1.value,
                    newPass2: newPass2.value
                },
                success: function(response) {
                    if (response.redirectUrl) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Password Reset Successful',
                            text: 'Your password has been reset. Please log in.',
                            confirmButtonText: 'Login Now',
                            willOpen: () => {
                                document.body.style.overflow = 'hidden'; // Lock scrolling
                            },
                            didClose: () => {
                                document.body.style.overflow = ''; // Restore scrolling
                                window.location.href = response.redirectUrl;
                            }
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Reset Failed',
                            text: response.message || 'Unable to reset password. Please try again.',
                            willOpen: () => {
                                document.body.style.overflow = 'hidden'; // Lock scrolling
                            },
                            didClose: () => {
                                document.body.style.overflow = ''; // Restore scrolling
                            }
                        });
                    }
                },
                error: function(xhr) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An unexpected error occurred. Please try again.',
                        willOpen: () => {
                            document.body.style.overflow = 'hidden'; // Lock scrolling
                        },
                        didClose: () => {
                            document.body.style.overflow = ''; // Restore scrolling
                        }
                    });
                }
            });
        });
    });
</script>

</body>
</html>